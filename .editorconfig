# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Package files
[package.json]
indent_style = space
indent_size = 2

# Lock files
[package-lock.json]
indent_style = space
indent_size = 2

# Configuration files
[*.{config.js,config.ts,eslint.config.js}]
indent_style = space
indent_size = 2

# Template files
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS and SCSS files
[*.{css,scss,sass}]
indent_style = space
indent_size = 2
