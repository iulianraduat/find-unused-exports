# NPM Configuration for MCP SpecGen

# Ensure consistent package-lock.json
package-lock=true

# Use exact versions for better reproducibility
save-exact=true

# Disable audit for CI/CD environments (can be overridden with NPM_CONFIG_AUDIT=true)
audit=false

# Disable fund for CI/CD environments (can be overridden with NPM_CONFIG_FUND=true)
fund=false

# Set registry to npmjs
registry=https://registry.npmjs.org/

# Enable strict SSL
strict-ssl=true

# Set user agent for better analytics
user-agent=npm/9.0.0

# Enable progress bar
progress=true

# Set log level
loglevel=warn

# Enable color output
color=true

# Set cache directory
cache=.npm-cache

# Disable update notification for CI/CD environments (can be overridden with NPM_CONFIG_UPDATE_NOTIFIER=true)
update-notifier=false

# Set engine strict mode
engine-strict=true
